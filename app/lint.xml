        <ignore path="src/main/res" />
    </issue>
    <issue id="AllowBackup">
        <ignore path="src/main/AndroidManifest.xml" />
    </issue>
    <issue id="DiscouragedApi">
        <ignore
        path="src/main/java/com/onlinepayments/client/android/exampleapp/translation/Translator.java" />
